<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:maxWidth="360sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:background="@drawable/card_layout_bg"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginStart="20sp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            android:text="01/01/2001"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners_label"/>

        <TextView
            android:id="@+id/textEventStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:layout_marginStart="30sp"
            android:text="9:00 am"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/event_card_start_time"/>

        <TextView
            android:id="@+id/textEventEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:layout_marginStart="60sp"
            android:text="- 5:00 pm"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/event_card_end_time"/>

        <TextView
            android:id="@+id/textEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="30sp"
            android:text="Go to Work"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/event_card_event_name"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>